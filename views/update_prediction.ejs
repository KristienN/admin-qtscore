                        <option value="https://www.countryflags.io/gh/flat/64.png">Ghana</option>
                        <option value="https://www.countryflags.io/gr/flat/64.png">Greece</option>
                        <option value="https://www.countryflags.io/hu/flat/64.png">Hungary</option>
                        <option value="https://www.countryflags.io/in/flat/64.png">India</option>
                        <option value="https://www.countryflags.io/iq/flat/64.png">Iraq</option>
                        <option value="https://www.countryflags.io/ie/flat/64.png">Ireland</option>
                        <option value="https://www.countryflags.io/it/flat/64.png">Italy</option>
                        <option value="https://www.countryflags.io/jp/flat/64.png">Japan</option>
                        <option value="https://www.countryflags.io/jo/flat/64.png">Jordan</option>
                        <option value="https://www.countryflags.io/mx/flat/64.png">Mexico</option>
                        <option value="https://www.countryflags.io/nz/flat/64.png">New Zealand</option>
                        <option value="https://www.countryflags.io/ng/flat/64.png">Nigeria</option>
