<html lang="en">
<head>
<%- include('./partials/head.ejs') %> 
</head>
<body>
    <%- include('./partials/nav.ejs') %> 

    <section class="p-5" id="add">
        <div class="container">
            <a href="home" class="btn btn-lg btn-light mt-5 mb-4"><i class="bi bi-arrow-left-circle"></i> Back to home</a>
            <h2 class="mb-5">Update Prediction</h2>
            
