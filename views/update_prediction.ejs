<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head.ejs') %> 
</head>
<body>
    <%- include('./partials/nav.ejs') %> 

    <section class="p-5" id="add">
        <div class="container">
            <h2 class="my-5">Update Prediction</h2>
            <form method="POST">
                <div class="form-group my-5">
                    <input type="text" class="form-control" id="id" name="id" value="<%= data._id %> " hidden>
                </div>
                <div class="form-group row my-5">
                    <div class="col-sm-6">
                        <label for="home_team">Home Team</label>
                        <input type="home_team" class="form-control" id="home_team" name="home_team" aria-describedby="emailHelp" value="<%= data.home_team %>" style="width: 30vw;">
                    </div>
                    <div class="col-sm-6">
                        <label for="away_team">Away Team</label>
                        <input type="away_team" class="form-control" id="away_team" name="away_team" aria-describedby="emailHelp" value="<%= data.away_team %>" style="width: 30vw;">
                    </div>
                </div>
                <div class="form-group row my-5">
                    <div class="col-sm-6">
                        <label for="home_score">Home Score</label>
                        <input type="number" class="form-control" id="home_score" name="home_score" aria-describedby="emailHelp" value=<%= data.home_score %>  style="width: 10vw;">
                    </div>
                    <div class="col-sm-6">
                        <label for="away_score">Away Score</label>
                        <input type="number" class="form-control" id="away_score" name="away_score" aria-describedby="emailHelp" value=<%= data.away_score %>  style="width: 10vw;">
                    </div>
                </div>

                <button class="btn btn-lg btn-primary" id="update-btn">Update</button>
            </form>
        </div>
    </section>

    <%- include('./partials/footer.ejs') %> 
    
</body>
</html>